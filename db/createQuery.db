//query for users table
CREATE TABLE `users` (
    `id` int(11) NOT NULL AUTO_INCREMENT,
    `user_name` varchar(20) DEFAULT NULL,
    `email` varchar(20) DEFAULT NULL,
    `password` varchar(10) DEFAULT NULL,
    `userType` tinyint(1) DEFAULT '0' COMMENT '0 - superAdmin 1- admin',
    PRIMARY KEY (`id`)
  ) ;

 //query for acess-control-list
 CREATE TABLE `acl_users` (
    `id` int(11) NOT NULL AUTO_INCREMENT,
    `user_id` int(11) NOT NULL,
    `user_read` tinyint(1) DEFAULT '1' COMMENT '1- allowed 0- not allowed',
    `user_write` tinyint(1) DEFAULT '0' COMMENT '1 - allowed 0- not allowed',
    `user_delete` tinyint(1) DEFAULT '0' COMMENT '1 - allowed 0- not allowed',
    `user_update` tinyint(1) DEFAULT '0' COMMENT '1 -allowed 0 - not allowed',
    PRIMARY KEY (`id`),
    KEY `user_id` (`user_id`),
    CONSTRAINT `acl_users_ibfk_1` FOREIGN KEY (`user_id`) REFERENCES `users` (`id`) ON DELETE CASCADE ON UPDATE CASCADE
  );